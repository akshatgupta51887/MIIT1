<script>
document.addEventListener('DOMContentLoaded', function() {
    const callMeInput = document.getElementById("callMeInput");
    const callMeError = document.getElementById("callMeError");
    const callMeSuccess = document.getElementById("callMeSuccess");
    const callMeBtn = document.getElementById("callMeBtn");

    // Input validation
    callMeInput.addEventListener("input", function(e) {
        const phone = e.target.value.trim();
        
        if (phone.length === 0) {
            callMeError.textContent = "";
            callMeSuccess.classList.add('d-none');
            callMeBtn.setAttribute("disabled", "disabled");
            return;
        }
        
        if (phone.length !== 10) {
            callMeError.textContent = "Add 10 digit phone number.";
            callMeSuccess.classList.add('d-none');
            callMeBtn.setAttribute("disabled", "disabled");
        } else if (!/^[6-9]\d{9}$/.test(phone)) {
            callMeError.textContent = "Invalid phone number. Must start with 6-9.";
            callMeSuccess.classList.add('d-none');
            callMeBtn.setAttribute("disabled", "disabled");
        } else {
            callMeError.textContent = "";
            callMeSuccess.classList.add('d-none');
            callMeBtn.removeAttribute("disabled");
        }
    });

    // Submit callback request
    callMeBtn.addEventListener("click", async function(e) {
        e.preventDefault();
        
        const phone = callMeInput.value.trim();
        if (!phone) return;

        // Disable button during request
        callMeBtn.setAttribute("disabled", "disabled");
        const originalText = callMeBtn.innerHTML;
        callMeBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Submitting...';

        try {
            const response = await fetch('/api/callback-request', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ phone: phone })
            });

            const data = await response.json();

            if (data.ok) {
                // Success
                callMeSuccess.textContent = data.message;
                callMeSuccess.classList.remove('d-none');
                callMeError.textContent = "";
                callMeInput.value = "";
                
                // Keep button disabled for 30 seconds
                setTimeout(() => {
                    callMeBtn.removeAttribute("disabled");
                }, 30000);
            } else {
                // Error
                callMeError.textContent = data.error;
                callMeSuccess.classList.add('d-none');
                callMeBtn.removeAttribute("disabled");
            }
        } catch (error) {
            console.error('Network error:', error);
            callMeError.textContent = "Network error. Please try again.";
            callMeSuccess.classList.add('d-none');
            callMeBtn.removeAttribute("disabled");
        } finally {
            callMeBtn.innerHTML = originalText;
        }
    });
});
</script>


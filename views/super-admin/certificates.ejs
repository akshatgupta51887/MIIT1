
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificates Management - MIIT Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/super-admin-dashboard">
                <i class="bi bi-speedometer2"></i> MIIT Super Admin
            </a>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> Admin
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/super-admin-logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-white sidebar border-end">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin-dashboard">
                                <i class="bi bi-house"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/centers">
                                <i class="bi bi-building"></i> Centers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/students">
                                <i class="bi bi-people"></i> Students
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/callbacks">
                                <i class="bi bi-telephone"></i> Callback Requests
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/super-admin/certificates">
                                <i class="bi bi-award"></i> Certificates
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/contact-queries">
                                <i class="bi bi-envelope"></i> Contact Queries
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Certificates Management</h1>
                    <a href="/super-admin/certificates/issue" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Issue New Certificate
                    </a>
                </div>

                <!-- Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Status</label>
                                <select name="status" class="form-select">
                                    <option value="all" <%= (filters.status === 'all') ? 'selected' : '' %>>All Status</option>
                                    <option value="active" <%= (filters.status === 'active') ? 'selected' : '' %>>Active</option>
                                    <option value="revoked" <%= (filters.status === 'revoked') ? 'selected' : '' %>>Revoked</option>
                                    <option value="expired" <%= (filters.status === 'expired') ? 'selected' : '' %>>Expired</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Search</label>
                                <input type="text" name="search" class="form-control" placeholder="Search by Certificate ID, Student Name..." value="<%= filters.search || '' %>">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary d-block w-100">Filter</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Certificates Table -->
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Certificates (Total: <%= pagination.total || 0 %>)</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Certificate ID</th>
                                        <th>Student</th>
                                        <th>Course</th>
                                        <th>Type</th>
                                        <th>Grade</th>
                                        <th>Issue Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% (certificates || []).forEach(cert => { %>
                                    <tr>
                                        <td><strong><%= cert.certificateId %></strong></td>
                                        <td>
                                            <%= cert.student.name %><br>
                                            <small class="text-muted"><%= cert.student.studentId %></small>
                                        </td>
                                        <td><%= cert.course.title %></td>
                                        <td><span class="badge bg-info"><%= cert.certificateType %></span></td>
                                        <td><span class="badge bg-success"><%= cert.grade %></span></td>
                                        <td><%= new Date(cert.issueDate).toLocaleDateString() %></td>
                                        <td>
                                            <span class="badge bg-<%= cert.status === 'active' ? 'success' : cert.status === 'revoked' ? 'danger' : 'warning' %>">
                                                <%= cert.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (cert.status === 'active') { %>
                                                <button class="btn btn-sm btn-danger" onclick="revokeCertificate('<%= cert._id %>')">
                                                    <i class="bi bi-x-circle"></i> Revoke
                                                </button>
                                            <% } %>
                                            <button class="btn btn-sm btn-info" onclick="viewDetails('<%= JSON.stringify(cert) %>')">
                                                <i class="bi bi-eye"></i> View
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (pagination.pages > 1) { %>
                        <nav class="mt-3">
                            <ul class="pagination justify-content-center">
                                <% for(let i = 1; i <= pagination.pages; i++) { %>
                                <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&status=<%= filters.status %>&search=<%= filters.search %>"><%= i %></a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Certificate Details Modal -->
    <div class="modal fade" id="certDetailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Certificate Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="certDetailsContent">
                    <!-- Certificate details will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function revokeCertificate(certId) {
            if (confirm('Are you sure you want to revoke this certificate? This action cannot be undone.')) {
                try {
                    const response = await fetch(`/super-admin/certificates/${certId}/revoke`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });
                    const result = await response.json();
                    if (result.ok) {
                        location.reload();
                    } else {
                        alert('Error: ' + result.error);
                    }
                } catch (error) {
                    console.log(error)
                    alert('Network error. Please try again.');
                }
            }
        }

        function viewDetails(certData) {
            const cert = JSON.parse(certData);
            const content = `
                <table class="table table-bordered">
                    <tr><th>Certificate ID</th><td>${cert.certificateId}</td></tr>
                    <tr><th>Verification Code</th><td>${cert.verificationCode}</td></tr>
                    <tr><th>Student</th><td>${cert.student.name} (${cert.student.studentId})</td></tr>
                    <tr><th>Email</th><td>${cert.student.email}</td></tr>
                    <tr><th>Course</th><td>${cert.course.title} (${cert.course.type})</td></tr>
                    <tr><th>Center</th><td>${cert.center.inst}, ${cert.center.state}</td></tr>
                    <tr><th>Type</th><td>${cert.certificateType}</td></tr>
                    <tr><th>Grade</th><td>${cert.grade}</td></tr>
                    <tr><th>Issue Date</th><td>${new Date(cert.issueDate).toLocaleDateString()}</td></tr>
                    <tr><th>Valid Until</th><td>${cert.validUntil ? new Date(cert.validUntil).toLocaleDateString() : 'Lifetime'}</td></tr>
                    <tr><th>Status</th><td><span class="badge bg-${cert.status === 'active' ? 'success' : 'danger'}">${cert.status}</span></td></tr>
                </table>
            `;
            document.getElementById('certDetailsContent').innerHTML = content;
            const modal = new bootstrap.Modal(document.getElementById('certDetailsModal'));
            modal.show();
        }
    </script>
    
    <style>
        .sidebar { min-height: calc(100vh - 56px); }
    </style>
</body>
</html>

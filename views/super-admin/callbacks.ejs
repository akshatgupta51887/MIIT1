<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Callback Requests - MIIT Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/super-admin-dashboard">
                <i class="bi bi-speedometer2"></i> MIIT Super Admin
            </a>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> Admin
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/super-admin-logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-white sidebar border-end">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin-dashboard">
                                <i class="bi bi-house"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/centers">
                                <i class="bi bi-building"></i> Centers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/students">
                                <i class="bi bi-people"></i> Students
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/super-admin/callbacks">
                                <i class="bi bi-telephone"></i> Callback Requests
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/super-admin/certificates">
                                <i class="bi bi-award"></i> Certificates
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/super-admin/contact-queries">
                                <i class="bi bi-envelope"></i> Contact Queries
                            </a>
                        </li>
                        
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Callback Requests</h1>
                </div>

                <!-- Filters -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Status</label>
                                <select name="status" class="form-select">
                                    <option value="all" <%= (filters.status === 'all') ? 'selected' : '' %>>All Status</option>
                                    <option value="pending" <%= (filters.status === 'pending') ? 'selected' : '' %>>Pending</option>
                                    <option value="called" <%= (filters.status === 'called') ? 'selected' : '' %>>Called</option>
                                    <option value="completed" <%= (filters.status === 'completed') ? 'selected' : '' %>>Completed</option>
                                    <option value="cancelled" <%= (filters.status === 'cancelled') ? 'selected' : '' %>>Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Search Phone</label>
                                <input type="text" name="search" class="form-control" placeholder="Search by phone number..." value="<%= filters.search || '' %>">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary d-block w-100">Filter</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Callbacks Table -->
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Callback Requests (Total: <%= pagination.total || 0 %>)</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Phone Number</th>
                                        <th>Status</th>
                                        <th>IP Address</th>
                                        <th>Requested On</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% (callbacks || []).forEach(callback => { %>
                                    <tr>
                                        <td><strong>+91 <%= callback.phone %></strong></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                callback.status === 'pending' ? 'warning' : 
                                                callback.status === 'called' ? 'info' : 
                                                callback.status === 'completed' ? 'success' : 'secondary' 
                                            %>">
                                                <%= callback.status %>
                                            </span>
                                        </td>
                                        <td><%= callback.ipAddress || 'N/A' %></td>
                                        <td>
                                            <%= new Date(callback.createdAt).toLocaleString() %>
                                            <% if (callback.updatedAt && callback.updatedAt.getTime() !== callback.createdAt.getTime()) { %>
                                                <br><small class="text-muted">Updated: <%= new Date(callback.updatedAt).toLocaleString() %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (callback.notes) { %>
                                                <%= callback.notes %>
                                            <% } else { %>
                                                <span class="text-muted">No notes</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical btn-group-sm" role="group">
                                                <% if (callback.status === 'pending') { %>
                                                    <button class="btn btn-info btn-sm" onclick="updateStatus('<%= callback._id %>', 'called')">
                                                        <i class="bi bi-telephone"></i> Mark Called
                                                    </button>
                                                <% } %>
                                                <% if (callback.status === 'called') { %>
                                                    <button class="btn btn-success btn-sm" onclick="updateStatus('<%= callback._id %>', 'completed')">
                                                        <i class="bi bi-check-circle"></i> Complete
                                                    </button>
                                                <% } %>
                                                <% if (callback.status !== 'cancelled' && callback.status !== 'completed') { %>
                                                    <button class="btn btn-secondary btn-sm" onclick="updateStatus('<%= callback._id %>', 'cancelled')">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                <% } %>
                                                <button class="btn btn-outline-primary btn-sm" onclick="addNotes('<%= callback._id %>')">
                                                    <i class="bi bi-pencil"></i> Notes
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (pagination.pages > 1) { %>
                        <nav class="mt-3">
                            <ul class="pagination justify-content-center">
                                <% for(let i = 1; i <= pagination.pages; i++) { %>
                                <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&status=<%= filters.status %>&search=<%= filters.search %>"><%= i %></a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Notes Modal -->
    <div class="modal fade" id="notesModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Notes</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <textarea class="form-control" id="notesTextarea" rows="3" placeholder="Enter notes..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="saveNotes()">Save Notes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentCallbackId = null;

        async function updateStatus(callbackId, status) {
            if (confirm(`Are you sure you want to mark this callback as ${status}?`)) {
                try {
                    const response = await fetch(`/super-admin/callback/${callbackId}/status`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ status })
                    });
                    const result = await response.json();
                    if (result.ok) {
                        location.reload();
                    } else {
                        alert('Error: ' + result.error);
                    }
                } catch (error) {
                    alert('Network error. Please try again.');
                }
            }
        }

        function addNotes(callbackId) {
            currentCallbackId = callbackId;
            const modal = new bootstrap.Modal(document.getElementById('notesModal'));
            modal.show();
        }

        async function saveNotes() {
            const notes = document.getElementById('notesTextarea').value;
            if (!notes.trim()) {
                alert('Please enter some notes');
                return;
            }

            try {
                const response = await fetch(`/super-admin/callback/${currentCallbackId}/status`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        status: 'pending', // Keep current status
                        notes: notes.trim()
                    })
                });
                const result = await response.json();
                if (result.ok) {
                    location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        }
    </script>
    
    <style>
        .sidebar { min-height: calc(100vh - 56px); }
    </style>
</body>
</html>
